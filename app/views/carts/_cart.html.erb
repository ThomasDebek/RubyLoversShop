<div class="jumbotron">
  <h2>Your Cart</h2>
  <table>
    <thead>
    <tr>
      <th>Quantity</th>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @cart.line_items.each  do |item| %>
      <tr>
        <td class="quantity"><%= item.quantity %></td>
        <td><%= item.product.name %></td>
        <td class="price"><%= number_to_currency(item.total_price) %></td>
        <td> <%= link_to 'Delete', item, method: :delete, data: {confirm: 'Are you sure'},  class:"btn btn-danger" %></td>
      </tr>
    <% end %>
    <tfoot>
    <tr>
      <th colspan="2">Total:</th>
      <td class="price"><%= number_to_currency(@cart.total_price) %></td>
    </tr>
    </tfoot>
    </tbody>
    </table>
  <%= button_to 'Empty cart', @cart, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-primary" %>

</div>



